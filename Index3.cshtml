@model PagedList.IPagedList<QUANLYNHASACH.Models.tbNHAXUATBAN>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Nhà Sách";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<body>
    <style>
        h2 {
            background-color: rgb(222, 230, 222);
            padding: 20px;
        }
    </style>
    <center><h2>BẢNG NHÀ XUẤT BẢN</h2></center>
    <center>
        <br /><br />
        <table class="table" border="1">
            <tr>
                <th>
                    MaNhaXuatBan
                </th>
                <th>
                    TenNhaXuatBan
                </th>
                <th>
                    DiaChi
                </th>
                <th>
                    SoDienThoai
                </th>
                <th>
                    @Html.ActionLink("Thêm Mới", "Create")|
                    @Html.ActionLink("Tìm Kiếm", "Find")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNhaXuatBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNhaXuatBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaNhaXuatBan }) |
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaNhaXuatBan }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaNhaXuatBan })
                    </td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </center>
</body>
</html>
