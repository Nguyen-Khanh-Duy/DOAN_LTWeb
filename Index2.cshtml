@model PagedList.IPagedList<QUANLYNHASACH.Models.tbHOADON>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Nhà Sách";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<body>
    <style>
        h2 {
            background-color: rgb(222, 230, 222);
            padding: 20px;
        }
    </style>
    <center><h2>BẢNG HÓA ĐƠN</h2></center>
    <center>
        <br /><br />
        <table class="table" border="1">
            <tr>
                <th>
                    SoHoaDon
                </th>
                <th>
                    NgayLapHoaDon
                </th>
                <th>
                    MaDaiLy
                </th>
                <th>
                    @Html.ActionLink("Thêm Mới", "Create") |
                    @Html.ActionLink("Tìm Kiếm", "Find")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoHoaDon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayLapHoaDon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaDaiLy)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.SoHoaDon }) |
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.SoHoaDon }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.SoHoaDon })
                    </td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </center>
</body>
</html>
